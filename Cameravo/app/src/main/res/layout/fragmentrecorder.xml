<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rlRecorder"
    android:layout_marginBottom="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bgcapturecamera"
        android:id="@+id/btRecorder"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/mTvTimeRecorder"
        android:text="00:00"
        android:textColor="#fff"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_above="@id/btRecorder"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imvPauseRecorder"
        android:layout_toLeftOf="@id/btRecorder"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/icsliderpointer"
        android:layout_width="80dp"
        android:layout_height= "80dp"/>

    <ImageView
        android:id="@+id/imvSwitchCameraR"
        android:src="@drawable/icswitchcamera"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/imvFlashInActiveR"
        android:src="@drawable/icflashinactive"
        android:layout_width="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp" />

    <VideoView
        android:id="@+id/vvShowVideoRecorder"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imvPauseVideoRecorder"
        android:src="@drawable/icsliderpointer"
        android:padding="150dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SeekBar
        android:id="@+id/sbVideoRecoder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="2dp" />

    <ImageView
        android:id="@+id/imvSaveVideoR"
        android:src="@drawable/icsave"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:background="@drawable/icsliderpointer"
        android:layout_marginRight="20dp"
        android:layout_width="60dp"
        android:padding="17dp"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/imvCancelVideoR"
        android:src="@drawable/bgcapturecancel"
        android:layout_width="80dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:layout_height="80dp" />

</RelativeLayout>
